<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Thumb drawable for checked state -->
    <item android:state_checked="true">
        <ripple android:color="#5A5A5A">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke android:width="3dp" android:color="@color/skyBlue" />
                    <size android:width="17dp" android:height="17dp" />
                </shape>
            </item>
        </ripple>
        <item android:state_hovered="true">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
                <stroke android:width="3dp" android:color="#5A5A5A" />
                <size android:width="17dp" android:height="17dp" />
                <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
                <corners android:radius="12dp" />
            </shape>
        </item>
    </item>

    <!-- Thumb drawable for unchecked state -->
    <item android:state_checked="false">
        <ripple android:color="#5A5A5A">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke android:width="3dp" android:color="@color/lightGrey" />
                    <size android:width="17dp" android:height="17dp" />
                </shape>
            </item>
        </ripple>
        <item android:state_hovered="true">
            <shape android:shape="oval">
                <solid android:color="@color/white" />
                <stroke android:width="3dp" android:color="#5A5A5A" />
                <size android:width="17dp" android:height="17dp" />
                <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
                <corners android:radius="12dp" />
            </shape>
        </item>
    </item>

</selector>